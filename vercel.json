{
  "version": 2,
  "builds": [
    { "src": "src/app.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/css/(.*)", "dest": "/public/css/$1" },
    { "src": "/js/(.*)", "dest": "/public/js/$1" },
    { "src": "/favicon\\.(svg|png)", "dest": "/public/favicon.$1" },
    { "src": "/(.*)", "dest": "src/app.js" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
